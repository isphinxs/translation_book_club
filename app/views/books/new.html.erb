<h1>New Book Form</h1>
<%= form_with model: @book do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :author %>
    <%= f.collection_select :author, Author.all, :id, :name %>
    
    <%= f.label :publisher %>
    <%= f.collection_select :publisher, Publisher.all, :id, :name %>
    
    <%= f.label :language %>
    <%= f.collection_select :language, Language.all, :id, :name %>

    <%= f.label :member %>
    <%= f.collection_select :member, Member.all, :id, :name %>

    <%= f.submit %>
<% end %>